{
    "name": "freyr/message-broker",
    "description": "Reliable Inbox & Outbox Patterns for Symfony Messenger with transactional guarantees and automatic deduplication",
    "type": "symfony-bundle",
    "license": "MIT",
    "keywords": [
        "symfony",
        "messenger",
        "inbox-pattern",
        "outbox-pattern",
        "event-driven",
        "amqp",
        "rabbitmq",
        "deduplication",
        "uuid-v7"
    ],
    "authors": [
        {
            "name": "Freyr Development Team"
        }
    ],
    "require": {
        "php": ">=8.2",
        "symfony/messenger": "^6.4|^7.0",
        "symfony/console": "^6.4|^7.0",
        "symfony/config": "^6.4|^7.0",
        "symfony/dependency-injection": "^6.4|^7.0",
        "symfony/http-kernel": "^6.4|^7.0",
        "symfony/doctrine-messenger": "^6.4|^7.0",
        "symfony/serializer": "^6.4|^7.0",
        "symfony/property-access": "^6.4|^7.0",
        "doctrine/dbal": "^3.0|^4.0",
        "doctrine/orm": "^3.0",
        "freyr/identity": "^0.4",
        "nesbot/carbon": "^2.0|^3.0",
        "ext-curl": "*"
    },
    "require-dev": {
        "ext-amqp": "*",
        "symfony/amqp-messenger": "^6.4|^7.0",
        "php-amqplib/php-amqplib": "^3.7",
        "phpstan/phpstan": "^2.1",
        "symplify/easy-coding-standard": "^13.0",
        "phpunit/phpunit": "^11.0|^12.0",
        "symfony/phpunit-bridge": "^6.4|^7.0",
        "symfony/framework-bundle": "^6.4|^7.0",
        "symfony/yaml": "^6.4|^7.0",
        "doctrine/doctrine-bundle": "^2.0"
    },
    "suggest": {
        "ext-amqp": "Required for AMQP transport support",
        "symfony/amqp-messenger": "Required for AMQP transport support"
    },
    "autoload": {
        "psr-4": {
            "Freyr\\MessageBroker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Freyr\\MessageBroker\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "scripts": {
        "phpstan": "phpstan analyse --memory-limit=-1",
        "ecs": "ecs check",
        "ecs:fix": "ecs check --fix",
        "test": "phpunit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
